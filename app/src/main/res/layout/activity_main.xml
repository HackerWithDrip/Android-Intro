<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message will be displayed here" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter your name here."
        android:inputType="textPersonName"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnSayHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Say Hello" />

    <Button
        android:id="@+id/btnWriteHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onWriteHelloClicked"
        android:text="Write Hello" />

    <Button
        android:id="@+id/btnDialNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onDialClicked"
        android:text="Dial Helpline" />

    <Button
        android:id="@+id/btnShowAnotherActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onShowClicked"
        android:text="Show Activity" />

</LinearLayout>